<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.profile.ProfileDetailsFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/name"
                    android:paddingStart="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    tools:text="Name : ny name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/age"
                    android:paddingStart="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    tools:text="Age : "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/gender"
                    android:paddingStart="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    tools:text="gender : boy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/height"
                    android:paddingStart="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    tools:text="height : "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/weigth"
                    android:paddingStart="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    tools:text="Weight : "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:id="@+id/delete"
                        android:layout_marginTop="10dp"
                        android:text="Delete Profile"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorBg1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:id="@+id/edit"
                        android:layout_marginTop="10dp"
                        android:text="Update Profile"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorBg1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:text="Health Standard"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/sage"
                    android:gravity="center"
                    tools:text="age: 5 year"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/sheight"
                    android:gravity="center"
                    tools:text="height: 5 cm"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/sweight"
                    android:gravity="center"
                    tools:text="weight: 5 kg"
                    android:textSize="17sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <TextView
            android:paddingStart="10dp"
            android:text="Updated History"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/list"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

    </LinearLayout>




</FrameLayout>